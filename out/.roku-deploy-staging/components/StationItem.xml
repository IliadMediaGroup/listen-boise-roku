<?xml version="1.0" encoding="utf-8" ?>
<component name="StationItem" extends="Group">
  <interface>
    <field id="itemContent" type="node" onChange="onItemContentChanged" />
  </interface>
  <script type="text/brightscript" uri="pkg:/components/StationItem.brs" />
  <children>
    <Poster
      id="poster"
      width="200"
      height="200"
      loadDisplayMode="scaleToFit"
      translation="[0, 0]"
    />
    <Label
      id="title"
      width="200"
      height="40"
      translation="[0, 200]"
      horizAlign="center"
      font="font:SmallBoldSystemFont"
    />
  </children>
</component>