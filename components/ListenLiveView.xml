<?xml version="1.0" encoding="utf-8" ?>
<component name="ListenLiveView" extends="Group">
  <interface>
    <field id="selectedStationIndex" type="integer" onChange="onStationSelected" />
    <field id="stations" type="array" /> <!-- Added to accept stations -->
  </interface>
  <script type="text/brightscript" uri="pkg:/components/ListenLiveView.brs" />
  <children>
    <!-- Station Grid -->
    <Group translation="[0, 0]">
      <PosterGrid
        id="stationGrid"
        translation="[0, 0]"
        itemSize="[150, 150]"
        itemSpacing="[20, 20]"
        numColumns="4"
        numRows="2"
        renderTracking="full"
        visible="true"
        focusable="true" />
    </Group>
    <!-- Playback UI -->
    <Group translation="[0, 0]">
      <LayoutGroup
        id="playbackUI"
        translation="[368, 200]"
        layoutDirection="vert"
        horizAlignment="center"
        vertAlignment="center"
        itemSpacings="[10, 10, 10, 10]"
        visible="false">
        <Poster
          id="albumCoverPoster"
          translation="[0, 0]"
          width="300"
          height="300"
          loadDisplayMode="scaleToFit"
          loadSync="true"
          visible="false" />
        <Label
          id="stationLabel"
          translation="[0, 0]"
          width="300"
          height="40"
          font="font:SmallSystemFont"
          color="0xFFFFFF"
          horizAlign="center"
          visible="false" />
        <Label
          id="songLabel"
          translation="[0, 0]"
          width="300"
          height="40"
          font="font:SmallSystemFont"
          color="0xFFFFFF"
          horizAlign="center"
          visible="false" />
        <Label
          id="artistLabel"
          translation="[0, 0]"
          width="300"
          height="40"
          font="font:SmallSystemFont"
          color="0xFFFFFF"
          horizAlign="center"
          visible="false" />
        <Poster
          id="toggleButton"
          uri="pkg:/images/play_pause.png"
          translation="[0, 0]"
          width="48"
          height="48"
          loadDisplayMode="scaleToFit"
          visible="false"
          focusable="true" />
      </LayoutGroup>
    </Group>
  </children>
</component>