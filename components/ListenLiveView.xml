<?xml version="1.0" encoding="utf-8" ?>
<component name="ListenLiveView" extends="Group">
  <interface>
    <field id="content" type="node" onChange="onContentSet" />
    <field id="visible" type="boolean" onChange="onVisibleChange" />
    <field id="stationSelected" type="node" />
  </interface>
  <script type="text/brightscript" uri="pkg:/components/ListenLiveView.brs" />
  <children>
    <Rectangle
      id="background"
      width="1280"
      height="720"
      color="0x000000FF"
    />
    <MarkupGrid
      id="stationGrid"
      translation="[100, 100]"
      itemComponentName="StationItem"
    />
  </children>
</component>