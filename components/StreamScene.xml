<?xml version="1.0" encoding="UTF-8"?>
   <component name="StreamScene" extends="Scene">
       <script type="text/brightscript" uri="pkg:/components/StreamScene.brs" />
       <children>
           <Rectangle
               id="background"
               color="#000000"
               width="1280"
               height="720"
               translation="[0, 0]" />
           <Label
               id="titleLabel"
               translation="[100, 50]"
               text="Listen Boise - KQBLHD3"
               color="#FFFFFF">
               <Font role="font" size="40" />
           </Label>
           <Label
               id="metadataLabel"
               translation="[100, 150]"
               text="Now Playing: Loading..."
               width="1080"
               color="#FFFFFF">
               <Font role="font" size="24" />
           </Label>
           <Button
               id="playButton"
               translation="[100, 250]"
               text="Play"
               focusable="true" />
           <Button
               id="stopButton"
               translation="[300, 250]"
               text="Stop"
               focusable="true" />
           <Timer
               id="metadataTimer"
               duration="30.0"
               repeat="true" />
           <Task
               id="audioTask"
               control="RUN">
               <script type="text/brightscript" uri="pkg:/components/AudioPlayerTask.brs" />
           </Task>
           <Task
               id="metadataTask"
               control="RUN">
               <script type="text/brightscript" uri="pkg:/components/MetadataTask.brs" />
           </Task>
       </children>
   </component>